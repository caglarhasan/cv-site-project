
@{
    ViewBag.Title = "AddCertification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yeni Sertifika/Kurs Ekle</h2>
<br />

<form method="post" class="from-group">
    <label>Sertifika/Kurs Adı</label>
    <input type="text" name="Title" value="" placeholder="Sertifika/Kurs Adı Giriniz..." class="form-control" />
    <br />
    <label>Kurum Adı</label>
    <input type="text" name="Subtitle" value="" placeholder="Kurum Adı Giriniz..." class="form-control" />
