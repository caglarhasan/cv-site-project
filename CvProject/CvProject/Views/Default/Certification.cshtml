@using CvProject.Models.Entities
@model List<Certification>

<div class="resume-section-content">
    <h2 class="mb-5" style="color: #bd5d38">SERTİFİKALAR VE KURSLAR</h2>
    @foreach (var item in Model)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">

                <h4 class="mb-0">
                    <span><i class="fas fa-trophy text-warning"></i></span>
                    @item.Title
                </h4>
                <div class="mb-0">
                    <span><i class="far fa-bookmark text-warning"></i></span>
                    @item.Subtitle
                </div>
            </div>
            <div class="flex-shrink-0"><span class="text-primary">@item.Date</span></div>
        </div>
    }
</div>
