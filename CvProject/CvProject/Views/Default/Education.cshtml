@using CvProject.Models.Entities
@model List<Education>

<div class="resume-section-content">
    <h2 class="mb-5" style="color: #bd5d38">EĞİTİM BİLGİLERİ</h2>
    @foreach (var item in Model)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">
                <h3 class="mb-0">@item.Title</h3>
                <div class="subheading mb-3">@item.Subtitle</div>
                <div>@item.Description</div>
            </div>
            <div class="flex-shrink-0"><span class="text-primary">@item.Date</span></div>
        </div>
    }
</div>
