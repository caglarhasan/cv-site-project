@using CvProject.Models.Entities
@model List<Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>İş Deneyimleri</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Firma/Şirket Adı</th>
        <th>Ünvan/Pozisyon</th>
        <th>Açıklama</th>
        <th>Başlangıç - Bitiş Tarihi</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Subtitle</td>
            <td>@item.Description</td>
            <td>@item.Date</td>
            <td><a href="/Experience/GetExperience/@item.ID" class="btn btn-warning">Düzenle</a></td>
            <td><a href="/Experience/DeleteExperience/@item.ID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<br />
<a href="/Experience/AddExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>

