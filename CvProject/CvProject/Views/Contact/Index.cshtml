@using CvProject.Models.Entities
@model List<Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <div class="card-body">

                                <div class="timeline timeline-inverse">

                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.Date.Value.ToString("dd-MMMM-yyyy")
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time">@item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.Fullname</a> @item.Subject</h3>
                                                <div class="timeline-body">
                                                    @item.Message
                                                </div>
                                                <a href="/Contact/DeleteMessage/@item.ID" class="btn btn-danger">Sil</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div><!-- /.card-body -->
                        </div>
                        <!-- /.nav-tabs-custom -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </section>
</body>
